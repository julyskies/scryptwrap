{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": [
    "tests/*.js",
    "runtime.js"
  ],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 100
      }
    ]
  }
}
